<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_computador"
        android:src="@drawable/computador"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/text_computer"
        android:text="@string/computer"
        android:textSize="22sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/img_computador"
        app:layout_constraintEnd_toEndOf="@id/img_computador"
        app:layout_constraintTop_toBottomOf="@id/img_computador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/text_computer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_comp01"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginStart="5dp"
            android:contentDescription="TODO"
            android:src="@drawable/card_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <ImageView
            android:id="@+id/img_comp02"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginStart="5dp"
            android:contentDescription="TODO"
            android:src="@drawable/card_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/img_comp03"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginStart="5dp"
            android:contentDescription="TODO"
            android:src="@drawable/card_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_jogarcarta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/img_player01"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:background="@drawable/backgroundimage"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:contentDescription="TODO"
            android:src="@drawable/papel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/img_player02"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:background="@drawable/backgroundimage"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/scissor_blade" />

        <ImageView
            android:id="@+id/img_player03"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:background="@drawable/backgroundimage"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/rock_titan" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_jogarcarta"
        android:visibility="invisible"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:text="@string/use_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>